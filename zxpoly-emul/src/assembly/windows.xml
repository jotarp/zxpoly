<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>withjre_windows</id>

  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>

  <formats>
    <format>zip</format>
  </formats>
  <files>
    <file>
      <source>${project.build.directory}${file.separator}${project.artifactId}-${project.version}.jar</source>
      <destName>zxpoly-emul.jar</destName>
      <outputDirectory>${project.build.finalName}${file.separator}</outputDirectory>
    </file>
    <file>
      <source>
        ${project.basedir}${file.separator}..${file.separator}zxpoly-emul-win-launcher${file.separator}bin${file.separator}zxpoly.exe
      </source>
      <destName>zxpoly.exe</destName>
      <outputDirectory>${project.build.finalName}${file.separator}</outputDirectory>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}${file.separator}jinput-natives-all</directory>
      <outputDirectory>${project.build.finalName}</outputDirectory>
      <includes>
        <include>*.dll</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}windows</directory>
      <outputDirectory>${project.build.finalName}</outputDirectory>
      <includes>
        <include>*/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}${file.separator}jre_windows_amd64</directory>
      <outputDirectory>${project.build.finalName}${file.separator}jre</outputDirectory>
      <includes>
        <include>*/**</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>